    "/pizza/delete/{id}": {
      "delete": {
        "summary": "Delete a pizza",
        "description": "Rota responsável por deletar uma pizza",
        "tags": ["Pizza"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID da pizza",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
