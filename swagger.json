{
  "openapi": "3.0.0",
  "info": {
    "title": "API Pizzaria",
    "description": "API de Pizzaria completa contendo o CRUD de pizzas e de usuários",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "API LOCAL"
    }
  ],
  "paths": {
    "/pizza/create": {
      "post": {
        "summary": "Create a new pizza",
        "description": "Rota responsável por criar uma nova pizza",
        "tags": ["Pizza"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pizza"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pizza"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pizza/findAll": {
      "get": {
        "summary": "Find all pizzas",
        "description": "Rota responsável por encontrar todas as pizzas",
        "tags": ["Pizza"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Pizza"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pizza/findById/{id}": {
      "get": {
        "summary": "Find pizza by ID",
        "description": "Rota responsável por encontrar uma pizza por ID",
        "tags": ["Pizza"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID da pizza",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna objeto do banco",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pizza"
                }
              }
            }
          },
          "404": {
            "description": "Pizza not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
